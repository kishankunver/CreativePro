# AI Provider Configuration (choose one)

# Option 1: OpenAI Direct
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Option 2: OpenRouter (Recommended - cheaper!)
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Provider Settings
VITE_AI_PROVIDER=openrouter  # or "openai"
VITE_AI_MODEL=openai/gpt-4o-mini  # OpenRouter model format
VITE_AI_MAX_TOKENS=2000

# Web Search & Research APIs
VITE_SERP_API_KEY=your_serpapi_key_here  # For Google search results
VITE_BRAVE_SEARCH_API_KEY=your_brave_search_key_here  # Alternative search API
VITE_CRUNCHBASE_API_KEY=your_crunchbase_key_here  # For company/startup data

# Patent Search
VITE_GOOGLE_PATENTS_API_KEY=your_google_patents_key_here  # For patent searches

# Market Research
VITE_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here  # For market data
VITE_NEWS_API_KEY=your_news_api_key_here  # For industry news/trends

# OpenRouter specific models (examples):
# openai/gpt-4o-mini (cheapest GPT-4 variant)
# anthropic/claude-3-haiku (very fast and cheap)
# anthropic/claude-3-sonnet (balanced)
# google/gemini-pro (Google's model)

# Research Settings
VITE_ENABLE_WEB_SEARCH=true
VITE_ENABLE_PATENT_SEARCH=true
VITE_ENABLE_COMPANY_SEARCH=true
VITE_ENABLE_MARKET_RESEARCH=true
VITE_MAX_SEARCH_RESULTS=10